export EDITOR="code -n -w"
export BUNDLER_EDITOR="code -n"
export GOPATH=$HOME/Projects/go
export ANDROID_HOME=$HOME/Library/Android/sdk
export PATH="$HOME/.local/bin:./node_modules/.bin:$HOME/.dotfiles/bin:$GOPATH/bin:/usr/local/share/npm/bin:/usr/local/sbin:/usr/local/opt/mysql@5.7/bin:/usr/local/git/bin:/opt/bin:$PATH:$ANDROID_HOME/platform-tools:$ANDROID_HOME/tools"
export NODE_PATH="/usr/local/lib/node_modules"
export MANPATH="/usr/local/man:/usr/local/mysql/man:/usr/local/git/man:$MANPATH"
export LC_CTYPE=en_US.UTF-8
export COMMAND_MODE=unix2003
export AWS_CREDENTIAL_FILE=$HOME/.elasticbeanstalk/aws_credential_file
export HOMEBREW_GITHUB_API_TOKEN=cc2934fb9c980f169bfbfa5e00316323e68d4970
export npm_config_loglevel=error
export NPM_TOKEN=954b7b0c-79f4-4b90-a8be-802258ced68f
export RUBY_YJIT_ENABLE=1

fpath=(~/.zsh/functions $fpath)

autoload -U ~/.zsh/functions/*(:t)

HISTFILE=~/.zsh_history
HISTSIZE=1000
SAVEHIST=1000

setopt NO_BG_NICE # don't nice background tasks
setopt NO_HUP
setopt NO_LIST_BEEP
setopt LOCAL_OPTIONS # allow functions to have local options
setopt LOCAL_TRAPS # allow functions to have local traps
setopt HIST_VERIFY
setopt SHARE_HISTORY # share history between sessions ???
setopt EXTENDED_HISTORY # add timestamps to history
setopt PROMPT_SUBST
setopt CORRECT
setopt COMPLETE_IN_WORD
setopt IGNORE_EOF

setopt APPEND_HISTORY # adds history
setopt INC_APPEND_HISTORY SHARE_HISTORY  # adds history incrementally and share it across sessions
setopt HIST_IGNORE_ALL_DUPS  # don't record dupes in history
setopt HIST_REDUCE_BLANKS

zle -N newtab

bindkey '^[^[[D' backward-word
bindkey '^[^[[C' forward-word
bindkey '^[[5D' beginning-of-line
bindkey '^[[5C' end-of-line
bindkey '^[[3~' delete-char
bindkey '^[^N' newtab
bindkey '^?' backward-delete-char
